{
  "name": "@mornieur/core",
  "version": "0.2.3",
  "sideEffects": false,
  "private": false,
  "type": "module",
  "main": "./dist/design-system.cjs.js",
  "module": "./dist/design-system.es.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/design-system.es.js",
      "require": "./dist/design-system.cjs.js"
    }
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "vite build",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint \"src/**/*.{ts,tsx,js,jsx}\"",
    "format": "prettier --write .",
    "test": "vitest",
    "test:ui": "vitest --ui --coverage.enabled=true",
    "test:ci": "vitest run --coverage --poolOptions.forks.singleFork",
    "test:changed": "git diff --name-only --relative HEAD | xargs yarn vitest related --run",
    "prepare": "husky",
    "type-check": "tsc --noEmit",
    "coverage": "vitest run --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepublishOnly": "npm run build"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@mdx-js/loader": "^3.1.1",
    "@next/mdx": "14.2.33",
    "@vitejs/plugin-react-swc": "^4.2.1",
    "embla-carousel-react": "^8.6.0",
    "lucide-react": "^0.544.0",
    "next": "15.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "styled-components": "^6.1.19",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "4.1.2",
    "@commitlint/cli": "18.4.1",
    "@commitlint/config-conventional": "18.4.0",
    "@eslint/eslintrc": "^3",
    "@eslint/js": "^9.39.1",
    "@storybook/addon-a11y": "10.1.0-alpha.14",
    "@storybook/addon-docs": "10.1.0-alpha.14",
    "@storybook/addon-links": "10.1.0-alpha.14",
    "@storybook/addon-onboarding": "10.1.0-alpha.14",
    "@storybook/addon-themes": "10.1.0-alpha.14",
    "@storybook/addon-vitest": "10.1.0-alpha.14",
    "@storybook/nextjs": "^10.0.8",
    "@storybook/nextjs-vite": "10.1.0-alpha.14",
    "@storybook/react-vite": "10.1.0-alpha.14",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.0",
    "@types/styled-components": "^5.1.36",
    "@types/testing-library__jest-dom": "^6.0.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^4.0.8",
    "clsx": "^2.1.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.1",
    "eslint-config-next": "15.5.4",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-storybook": "10.0.8",
    "globals": "^16.5.0",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "jsdom": "^27.1.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "storybook": "10.1.0-alpha.14",
    "typescript": "^5",
    "typescript-eslint": "^8.46.4",
    "vitest": "^4.0.8"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  }
}
