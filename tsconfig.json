{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": false,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "vitest/globals",
      "@testing-library/jest-dom",
      "@storybook/addons",
      "@storybook/react",
      "@types/react"
    ]
  },
  "include": ["src", "vite.config.ts", "src/__tests__/setup/setup.tsx"],
  "exclude": ["node_modules", "dist", "coverage"]
}
